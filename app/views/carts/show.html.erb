<h1>Your Cart</h1>

<% if notice %>
  <p><%= notice %></p>
<% end %>
<% @cart.line_items.each do |line_item| %>
  <p><%= link_to line_item.item.title, item_path(line_item.item) %> | <%= number_to_currency(line_item.item.price.to_f/100)  %> | Quantity: <%= @cart_item_quantity = line_item.quantity %> | <% if line_item.item.inventory < 5 %>
    <strong>There are only <%= line_item.item.inventory %> left in stock.</strong>
  <% end %> </p>
<% end %>
<p>Order total: <strong><%= number_to_currency(@cart.total/100 * @cart_item_quantity) %></strong> </p>

<%= button_to 'Checkout', checkout_path %>
